<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/scrollView"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="poliues.eisi.fia.edu.sv.poliues.ReservaInsertarActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/facultad"
            android:id="@+id/textViewfacultad"/>

        <Spinner
            android:id="@+id/spfacultades"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="30"
            android:focusable="true"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/numeropersonas"
                android:id="@+id/textViewnumeropersonas"/>
            <EditText
                android:id="@+id/editnumeropersonas"
                android:inputType="number"
                android:ems="20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"/>
        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/motivo"
                    android:id="@+id/textViewmotivo"/>

            <EditText
                    android:id="@+id/editmotivo"
                    android:inputType="text"
                    android:ems="20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="true"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/descripcionreserva"
            android:id="@+id/textViewdescripcionreserva"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="20"
            android:id="@+id/editdescripcionreserva"
            android:focusable="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/area"
            android:id="@+id/textViewarea"
            />
        <Spinner
            android:id="@+id/spareas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="30"
            android:focusable="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fechareserva"
            android:id="@+id/textViewfechareserva"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageButton
                android:id="@+id/imagefecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/editfechareserva"
                android:layout_toRightOf="@+id/editfechareserva"
                android:contentDescription="@string/selectfecha"
                android:cropToPadding="true"
                android:src="@drawable/calendar_icon" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:ems="20"
                android:id="@+id/editfechareserva"
                android:editable="true"
                android:focusable="true"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/horarioinicioreserva"
            android:id="@+id/textViewhorainicio"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageButton
                android:id="@+id/imagehorainicio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/selecthora"
                android:cropToPadding="true"
                android:src="@drawable/clock_icon" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="time"
                android:ems="20"
                android:id="@+id/edithorarioinicio"
                android:editable="true"
                android:focusable="true"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/horariofinreserva"
            android:id="@+id/textViewhorafin"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageButton
                android:id="@+id/imagehorafin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/selecthora"
                android:cropToPadding="true"
                android:src="@drawable/clock_icon" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="time"
                android:ems="20"
                android:id="@+id/edithorariofin"
                android:editable="false"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/insertar"
                android:id="@+id/buttonguardar"
                android:layout_marginTop="30dp"
                android:padding="10dp"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
</ScrollView>